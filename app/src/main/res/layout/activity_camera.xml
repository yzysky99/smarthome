        <!--android:text="8068"/>-->

    <Button
        android:id="@+id/remote_camera_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20"
        android:text="查看监控画面"/>

</LinearLayout>
